@model EF_Core_DB_First.Models.Child

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Child</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parents" class="control-label"></label>
                <select asp-for="Parents" class="form-control" multiple="multiple">
                    @foreach (var parent in (MultiSelectList)ViewBag.ParentsList)
                    {
                        if (parent.Selected)
                        {
                            <option value="@parent.Value" selected>@parent.Text</option>
                        }
                        else
                        {
                            <option value="@parent.Value">@parent.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="Parents" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
